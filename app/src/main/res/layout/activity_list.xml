<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_list"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.wcs.wildbuzz.List">

    <ImageButton
        android:id="@+id/buttonChallengeA"
        android:layout_width="match_parent"
        android:layout_height="118dp"
        app:srcCompat="@android:color/darker_gray"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="358dp"
        android:layout_alignParentTop="true" />

    <ImageButton
        android:id="@+id/buttonChallengeB"
        android:layout_width="372dp"
        android:layout_height="118dp"
        app:srcCompat="@android:color/darker_gray"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="215dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/buttonChallengeA"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/buttonChallengeC"
        android:layout_width="372dp"
        android:layout_height="118dp"
        app:srcCompat="@android:color/darker_gray"
        tools:layout_editor_absoluteX="6dp"
        tools:layout_editor_absoluteY="70dp"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/buttonChallengeB"
        android:layout_alignStart="@+id/buttonChallengeB" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="@drawable/nav_item_color"
        app:itemTextColor="@drawable/nav_item_color"
        app:menu="@menu/bottom_nav"
         />

</RelativeLayout>
