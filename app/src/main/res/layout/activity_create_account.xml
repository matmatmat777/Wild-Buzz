<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewEmailUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/EmailUser"
        android:layout_above="@+id/editTextEmailUser"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textViewPasswordUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/PasswordUser"
        android:layout_above="@+id/editTextPasswordUser"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/editTextPasswordUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"
        android:ems="10"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/editTextEmailUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_above="@+id/editTextPasswordUser"
        android:layout_alignLeft="@+id/editTextPasswordUser"
        android:layout_alignStart="@+id/editTextPasswordUser"
        android:layout_marginBottom="45dp" />

    <Button
        android:id="@+id/buttonRegister"
        android:background="@color/vertWCS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="75dp"
        android:text="@string/buttonRegister"
        android:layout_above="@+id/textViewSignin"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/textViewSignIn"
        android:id="@+id/textViewSignin"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>